<h2 class="mt-2">Category: <%= @category.name %></h2>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mb-4">
    <%= link_to 'Edit category name', edit_category_path(@category), class: 'btn btn-outline-info' %>
  </div>
<% end %>

<div class="flickr_pagination">
  <%= will_paginate @category_articles, :container => false %>
</div>

<%= render 'articles/article_list', articles: @category_articles %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>