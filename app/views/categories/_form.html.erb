<%= render 'shared/errors', obj: @category %>
  
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>

  <div class="form-group row">
    <div class="col-sm-2"></div>

    <div class="col-sm-2 text-right"><%= f.label :name, 'Category name' %></div>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row">
      <div class="col-sm-4"></div>
      <div class="col-sm-8">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
      </div>
  </div>
    
<% end %>
