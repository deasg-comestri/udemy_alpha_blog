<h1 class="mt-2">Log in</h1>

<div class="container">

  <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
  
    <div class="form-group row">
      <div class="col-sm-2"></div>

      <div class="col-sm-2 text-right"><%= f.label :email %></div>
      <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2"></div>

      <div class="col-sm-2 text-right"><%= f.label :password %></div>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
      </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
          <%= f.submit "Log in", class: "btn btn-outline-dark btn-lg" %>
        </div>
    </div>
      
  <% end %>

  <div class="text-center pb-3">
    [ <%= link_to 'Cancel', articles_path, class: "text-center" %> ]
  </div>

</div>
