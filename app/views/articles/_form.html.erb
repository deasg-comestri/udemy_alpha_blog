

<div class="container">

  <%= render 'shared/errors' %>
  
  <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
  
    <div class="form-group row">
      <div class="col-sm-2"></div>

      <div class="col-sm-2 text-right"><%= f.label :title %></div>
      <div class="col-sm-6">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2"></div>

      <div class="col-sm-2 text-right"><%= f.label :description %></div>
      <div class="col-sm-6">
        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Article text" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4"></div>
      <div class="col-sm-8">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
      </div>
    </div>
      
  <% end %>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-8 p-3">
      [ <%= link_to 'Cancel', articles_path %> ]
    </div>
  </div>

</div>
